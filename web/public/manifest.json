{
  "manifest_version": 3,
  "name": "Croissant ü•ê",
  "description": "A wallet for Linera Blockchain",
  "version": "0.1",
  "action": {
    "default_title": "Croissant",
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "offscreen",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "assets/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
